@charset "UTF-8";
/* common.css : 공통 */

/* ul, ol 목록 수평 배치 */
ul.menu_item_2, ol.menu_item_2 {
	list-style: none;
	margin: 0;
	padding: 0;
}

ul.menu_item_2 li, ol.menu_item_2 li {
	display: inline; 
	font-size: 9px;
	margin-right: 5px;
	border: solid 1px #efefef;
}

/* ul, ol 아이템 목록 : 기존 property 제거 */
ul.menu_item_1, ol.menu_item_1 {
	list-style: none;
	margin: 0;
	padding: 0;
}

/* ul li, ol li 설정 : #efefef */
ul.menu_item_1 li, ol.menu_item_1 li {
	padding: 5px 0 5px 5px;;
	margin-bottom: 5px;
	border-bottom: dotted 1px #efefef;
	font-size: 12px;
}

/* ul li, ol li 맨마지막 li 항목은 밑줄 제거 */
ul.menu_item_1 li:last-child, ol.menu_item_1 li:last-child {
	border-bottom: 0px;
}

/* ul li, ol li 항목 앞에 > 아이콘으로 사용 */
ul.menu_item_1 li:before, ol.menu_item_1 li:before {
	content: ">";
	display: inline-block;
	vertical-align: middle;
	padding: 0 5px 6px 0;
}




