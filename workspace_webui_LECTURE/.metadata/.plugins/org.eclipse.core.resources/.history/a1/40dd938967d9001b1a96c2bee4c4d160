<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>DOM API basic</title>
<script type="text/javascript">
	/* 윈도우 로드 이벤트 처리 함수 */
	window.onload = function() {
		var takeElement = document.getElementById("title_1");
		console.log(typeof(takeElement));
		var html = takeElement.innerHTML;
		console.log("html >> ", html);
		
		takeElement.innerHTML = "<h1 style='color:red;background-color:yellow;'>여러분파이팅!!!</h1>"
	}
</script>
</head>
<body>
<h3 id="title_1">DOM API basic</h3>
</body>
